@import 'jeet'

.note-maker
  center(50vw)
  height 60px
  background-color alpha(white, 60%)

  input
    col(5/6)
    height 60px
    font-size 2rem
    padding-left 10px
    background-color transparent
    color alpha(black, 70%)
    outline none
    border none
    &:focus
      outline none

    &::-webkit-input-placeholder
      font-weight 100
      color alpha(black, 10%)


    &:-moz-placeholder  /* Firefox 18- */
       font-weight 100
       color alpha(black, 10%)


    &::-moz-placeholder   /* Firefox 19+ */
       font-weight 100
       color alpha(black, 10%)


    &:-ms-input-placeholder
       font-weight 100
       color alpha(black, 10%)

  button
    cursor pointer
    outline none
    height: 60px
    text-align center
    border none
    font-size 1.3rem
    background-color transparent
    color alpha(#2ecc71, 70%)
    text-transform capitalize
    line-height 60px
    float right
    &:active
      background-color alpha(black, 5%)
